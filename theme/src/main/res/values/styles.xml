<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.OA.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">@dimen/lineSpacing_multiplier</item>
    </style>

    <style name="TextAppearance.OA.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">@dimen/lineSpacing_multiplier</item>
    </style>

    <style name="TextAppearance.OA.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">@dimen/lineSpacing_multiplier</item>
    </style>

    <style name="TextAppearance.OA.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">@dimen/lineSpacing_multiplier</item>
    </style>

    <style name="TextAppearance.OA.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">@dimen/lineSpacing_multiplier</item>
    </style>

    <style name="TextAppearance.OA.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/font_body</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacing_extra</item>
    </style>

    <style name="TextAppearance.OA.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/font_body</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacing_extra</item>
    </style>

    <style name="TextAppearance.OA.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/font_body</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacing_extra</item>
    </style>

    <style name="TextAppearance.OA.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/font_body_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacing_extra</item>
    </style>

    <style name="TextAppearance.OA.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:fontFamily">@font/font_head</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.OA.Button.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.OA.Button.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.OA.ActionMenu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="fontFamily">@font/font_head</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Base.Widget.OA.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="Widget.OA.Toolbar" parent="Base.Widget.OA.Toolbar" />

    <style name="Base.Widget.OA.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
        <item name="cornerRadius">@dimen/card_radius</item>
    </style>

    <style name="Base.Widget.OA.Button.Secondary">
        <item name="android:textColor">@color/btn_secondary_text_color_selector</item>
        <item name="backgroundTint">@color/btn_secondary_bg_color_selector</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/btn_secondary_stroke_color_selector</item>
        <item name="rippleColor">@color/oa_gray_light</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="iconPadding">-20dp</item>
    </style>


    <style name="Base.Widget.OA.Button.Medium" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_medium_height</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
        <item name="cornerRadius">@dimen/card_radius</item>
        <item name="android:textAppearance">?attr/textAppearanceButtonMedium</item>
    </style>

    <style name="Base.Widget.OA.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_btn_text_color_selector</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/oa_gray_light</item>
    </style>

    <style name="Base.Widget.OA.Button.TextButton.Icon">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingStart">@dimen/spacing_xsmall</item>
        <item name="android:paddingEnd">@dimen/spacing_xsmall</item>
        <item name="strokeColor">@color/oa_gray_light_b</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="iconPadding">@dimen/spacing_small</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.OA.Button.TextButton.Icon" parent="Base.Widget.OA.Button.TextButton.Icon" />

    <style name="Widget.OA.Button.TextButton.Dialog" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_btn_text_color_selector</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.Widget.OA.Switch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <item name="thumbTint">@color/switch_thumb_color_selector</item>
        <item name="trackTint">@color/switch_track_color_selector</item>
    </style>

    <style name="Base.Widget.OA.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:popupElevation">@dimen/elevation</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="Base.Widget.OA.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/oa_black</item>
    </style>

    <style name="Base.Widget.OA.ProgressBar.Horizontal" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">@dimen/spacing_xsmall</item>
        <item name="android:maxHeight">@dimen/spacing_xsmall</item>
        <item name="android:progressDrawable">@drawable/bg_horizontal_progress_bar</item>
    </style>

    <style name="Base.Widget.OA.Divider" parent="android:Widget">
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">1dp</item>
        <item name="android:background">@color/oa_gray_light_b</item>
    </style>

    <style name="Base.Widget.OA.Toast.Confirmation" parent="android:Widget">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:background">@drawable/bg_toast_confirmation</item>
        <item name="android:textColor">@color/oa_blue_active</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:drawableStart">@drawable/ic_check_circle_outline</item>
        <item name="android:drawableTint">@color/oa_blue_active</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="Widget.OA.Toast.Confirmation" parent="Base.Widget.OA.PromoBanner" />

    <style name="Base.Widget.OA.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">?attr/textAppearanceBody2</item>
        <item name="tabInlineLabel">true</item>
    </style>

    <style name="Base.Widget.OA.PromoBanner" parent="android:Widget">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.OA.PromoBanner" parent="Base.Widget.OA.PromoBanner" />

    <style name="AlertDialog.OA" parent="Base.AlertDialog.AppCompat">
        <item name="listItemLayout">@layout/view_select_dialog_item</item>
    </style>

</resources>